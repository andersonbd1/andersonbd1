set number
color torte
set vb
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab

set expandtab
syntax enable
set noswapfile
set foldmethod=indent
set autoindent
set ignorecase
set hlsearch
set nowritebackup
set nobackup
set encoding=utf8
set fileencoding=utf8

map <F2> :set tabstop=2<cr>:set softtabstop=2<cr>:set shiftwidth=2<cr>:set taglength=2<cr>:set smarttab<cr>
map <F4> :set tabstop=4<cr>:set softtabstop=4<cr>:set shiftwidth=4<cr>:set taglength=4<cr>:set smarttab<cr>
map <F8> :set tabstop=8<cr>:set softtabstop=8<cr>:set shiftwidth=8<cr>:set taglength=8<cr>:set smarttab<cr>
